<h1>Listing orders</h1>

<table>
  <tr>
    <th>Service</th>
    <th>User</th>
    <th>Buyer</th>
    <th>Buyer name</th>
    <th>Phone</th>
    <th>Description</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.service_id %></td>
    <td><%=h order.user_id %></td>
    <td><%=h order.buyer_id %></td>
    <td><%=h order.buyer_name %></td>
    <td><%=h order.phone %></td>
    <td><%=h order.description %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order', new_order_path %>